#!/usr/bin/env python
"""
Weather forecast entrypoint
"""
import supertool.weather


if __name__ == '__main__':
    address = input('input address> ')
    coordinates = supertool.weather.get_coordinates_by_address(address)
    # print current weather
    supertool.weather.get_current_weather_by_coordinates(lat=coordinates['lat'],
                                                         lon=coordinates['lon']
                                                         )
    # print future weather
    supertool.weather.get_weather_forecast_by_coordinates(lat=coordinates['lat'],
                                                          lon=coordinates['lon']
                                                          )
